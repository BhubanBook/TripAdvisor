<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbarExpence"
        android:layout_width="match_parent"
        android:background="@color/pestGreen"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/allexpenseBackButton"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:src="@drawable/ic_left_arrow"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="All Expensse"
            android:textColor="#FFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Spinner
        android:layout_below="@id/actionbarExpence"
        android:id="@+id/momentsSpinnerBTN"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp">

    </Spinner>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/momentsSpinnerBTN"
        android:layout_width="match_parent"
        android:id="@+id/momentsRV"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMOments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        app:elevation="4dp" />
</RelativeLayout>