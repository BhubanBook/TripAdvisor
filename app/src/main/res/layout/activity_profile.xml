<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/skipBTN"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_madel_4"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:onClick="Skip"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:text="Skip"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Add Profile Photo"
        android:textSize="25sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/PictureIV"
        android:background="@drawable/ic_button_madel_5"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/takePhotoBTN"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:paddingLeft="25dp"
            android:drawableLeft="@drawable/ic_camera_icon"
            android:background="@drawable/ic_button_madel_4" />

        <Button
            android:id="@+id/galleryBTN"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="60dp"
            android:drawableLeft="@drawable/ic_gallery_icon"
            android:background="@drawable/ic_button_madel_2" />
    </LinearLayout>


    <Button
        android:id="@+id/photoSaveBTN"
        android:background="@drawable/ic_button_madel_3"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:paddingLeft="70dp"
        android:paddingRight="60dp"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableRight="@drawable/ic_save_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>