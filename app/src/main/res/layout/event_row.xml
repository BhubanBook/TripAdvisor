<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventNameET"
            android:text="Event Name"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/eventBudgetET"
            android:text="10000"
            android:gravity="right"
            android:layout_below="@id/eventNameET"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView

            android:id="@+id/eventFormDateET"
            android:text="1/2/2003"
            android:layout_below="@id/eventBudgetET"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/eventToDateET"
            android:text="1/2/2029"
            android:layout_below="@id/eventFormDateET"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
